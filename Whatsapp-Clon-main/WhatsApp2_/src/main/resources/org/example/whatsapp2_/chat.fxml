<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.whatsapp2_.ChatController">
    <top>
        <Label fx:id="chatHeader" text="Chat" />
    </top>
    <center>
        <TextArea fx:id="chatArea" editable="false" />
    </center>
    <bottom>
        <HBox spacing="10">
            <TextField fx:id="messageField" promptText="Escribe un mensaje..." />
            <Button text="Enviar" onAction="#enviarMensaje" />
        </HBox>
    </bottom>
</BorderPane>
